                        <ContentPresenter />
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="2" Grid.Column="1">
                <Border BorderBrush="{StaticResource Border}" BorderThickness="3" />
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter />
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="2" Grid.Column="2">
                <Border BorderBrush="{StaticResource Border}" BorderThickness="3" />
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter />
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <Rectangle
            Width="137.5"
            Height="137.5"
            Margin="27.188,449.375,735,53.125"
            Style="{StaticResource Kuromi1}" />
