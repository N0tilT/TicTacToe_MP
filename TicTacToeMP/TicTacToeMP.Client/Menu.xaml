<Window x:Class="TicTacToeMP.Core.Client.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeMP.Core.Client"
        Title="Menu"
        Background="{StaticResource MenuBack}"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">

    <Grid>
        <Frame x:Name="frame"/>
        <Grid Margin="355,330,356,196">
            <Button x:Name="Play" Content="Играть" Height="98" Width="190"
            Style="{DynamicResource ButtonPlay}" Click="ButtonPlay_Click"/>
        </Grid>

        <Grid Margin="218.5,190,218.5,336">
            <Rectangle
                Width="468"
                Height="98"
                Style="{StaticResource MenuKvadrat}"  />

            <Grid Margin="0,0,231,0">
                <Label
                Content="Введите имя:"
                Style="{StaticResource Text}"  FontSize="50"  />
            </Grid>

            <Grid Margin="234,0,0,0" >
                <TextBox x:Name="tbPlayername" Text="мявка1" FontSize="50"  Style="{StaticResource TextBox}" TextWrapping="Wrap" MaxLines="12"  />
            </Grid>
        </Grid>
        
        <Rectangle
                Width="662.5"
                Height="98"
                Style="{StaticResource MenuKvadrat}" Margin="119,52,119,474" />
        <Label
                Content="Крестики-нолики: Куроми против Мелоди"
                Style="{StaticResource Text}" Margin="119,52,119,474" FontSize="45"/>


    </Grid>
</Window>
