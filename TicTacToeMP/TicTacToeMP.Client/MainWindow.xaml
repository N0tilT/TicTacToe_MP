                </Button.Template>
            </Button>
            <Button Grid.Row="1" Grid.Column="1">
                <Border BorderBrush="{StaticResource Border}" BorderThickness="3" />
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter />
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Row="1" Grid.Column="2">
